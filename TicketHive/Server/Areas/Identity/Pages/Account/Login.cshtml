@page
@model TicketHive.Server.Areas.Identity.Pages.Account.LoginModel
@{
}
<body style="background-color:#E0F2FF;">
<div class="card border-dark text-center">
		<h2 class=" text-center align-items-center" style="background: #305076; color:#fbe89c; height: 50px;">Login</h2>
		<form method="post" style="margin-top: 35px;">
		<div class="m-3">
			<label for="input-username">Username: </label>
			<input id="input-username" asp-for="Username" type="text" placeholder="Username" />
		</div>
		<div class="m-3">
			<label for="input-password">Password: </label>
			<input id="input-password" asp-for="Password" type="password" placeholder="Password" />			
		</div>		
		<div class="m-3">
				<input class="btn btn-primary" style=" background-color: #305076!important; color: #fbe89c!important; margin-top: 35px; " type="submit" value="Login" />
		</div>
		<div class="m-3">
			<span class="text-danger" asp-validation-for="Username"></span>			
		</div>
		<div class="m-3">
			<span class="text-danger" asp-validation-for="Password"></span>			
		</div>
		<span class="text-danger">
			@if (Model.Error != null)
			{
				@Model.Error
			}
		</span>
	</form>
</div>
</body>